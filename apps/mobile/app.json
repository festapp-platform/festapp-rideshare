{
  "expo": {
    "name": "Festapp Rideshare",
    "slug": "festapp-rideshare",
    "scheme": "com.festapp.rideshare",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#7C6FA0"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.festapp.rideshare"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#7C6FA0"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.festapp.rideshare"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": ["expo-router"]
  }
}
